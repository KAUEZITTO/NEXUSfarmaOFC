rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allows all reads and writes to all documents in the database.
    // This is useful for development, but it's insecure for production.
    // You should secure your database before deploying to production.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
