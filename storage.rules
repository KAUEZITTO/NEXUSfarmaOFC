
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Apenas usuários autenticados podem ler e escrever arquivos
    // no diretório de pacientes. Isso protege os laudos e receitas.
    match /patients/{patientId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Todas as outras rotas no Storage são negadas por padrão.
  }
}
